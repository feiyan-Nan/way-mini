/* components/tab/index.wxss */
.weui-tabs {
  width: 100%;
  margin-top: 50rpx;
}
.weui-tabs-bar__wrp {
  /* margin-top: 20rpx; */
  position: sticky;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 20;
}
.weui-tabs-bar__content {
  width: 100%;
  height: 86rpx;
  line-height: 60rpx;
  white-space: nowrap;
  display: flex;
  justify-content: space-around;
}
.weui-tabs-bar__item {
  /* display: inline-block; */
  padding: 0 20rpx;
}
.weui-tabs-bar__title {
  display: inline-block;
  border-bottom-width: 2rpx;
  border-bottom-style: dashed;
  border-bottom-color: transparent;
  position: relative;
}
.badge {
  position: absolute;
  right: 0;
  top: -13rpx;
  color: #e88c73;
  font-size: 20rpx;
  width: 0;
}
.weui-tabs-swiper {
  width: 100%;
  /*min-height: calc(100vh - 180rpx);*/
  min-height: calc(100vh - 310rpx);
}
