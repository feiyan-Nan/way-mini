.swiper {
  width: 750rpx;
  height: 800rpx;
  /* background: #000000; */
  /* opacity: 0.09; */
}

.swiper.full-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
  background-color: #000000;
  z-index: 1001;
}

.swiper .swiper-item {
  position: relative;
}
.swiper-item .bottom-mask {
  background: rgba(0,0,0,0) linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.3));
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 160rpx;
  z-index: 997;
}

.swiper-image-wrap {
  position: absulute;
  width: 100%;
  height: 100%;
  overflow: hidden;  
}

.swiper-image {
  width: 100%;
  height: 800rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 996;
}
.swiper-image.hide {
  display: none;
  height: 0;
  width: 0;
}
.swiper-image.cover {
  position: absolute;
  top: 0;
  left: 0;
}
.swiper-image.origin {
  /* position: absolute;
  top: -1px;
  left: -1px;
  width: 1px;
  height: 1px; */
  z-index: 995;
}

.swiper-video {
  width: 100%;
  height: 800rpx;
  position: relative;
  /* position: absolute;
  top: 50%;
  transform: translateY(-50%); */
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.current-tip {
  position: absolute;
  bottom: 66rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #FFFFFF;
  z-index: 1001;
  left: 50%;
  transform: translateX(-50%);
}