.custom-loading{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 999;
}

.custom-loading .mask {
  background: rgba(0,0,0,0);
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  /*align-items: flex-start;*/
  align-items: center;
}

.custom-loading .mask .mask-body{
  width: 200rpx;
  height: 240rpx;
  background-color: #031C24;
  font-size: 24rpx;
  color: #FFF;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.custom-loading .mask .mask-body image{
  width: 100rpx;
}

.custom-loading .mask .mask-body text{
  margin-top: 30rpx;
}