.custom_header {
  width: 100%;
  height: 100%;
  position: relative;
}
.custom_header .baby_info {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  height: 100rpx;
  padding-right: 14rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  padding-left: 14rpx;
  background-color: rgba(0, 0, 0, 0.3);
}
.custom_header .baby_info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.custom_header .baby_info .info {
  display: flex;
  flex-direction: column;
  margin-left: 22rpx;
}
.custom_header .baby_info .info > view {
  font-weight: 700;
  color: #fff;
  line-height: 42rpx;
  text-shadow: 0 2rpx 2rpx 0 rgba(0, 0, 0, 0.84);
}
.custom_header .baby_info .info > view.name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 250rpx;
  font-size: 42rpx;
}
.custom_header .baby_info .info > view.gender {
  font-size: 28rpx;
}
.custom_header .warning {
  position: absolute;
  right: 50rpx;
  top: 50rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 42rpx;
  text-shadow: 0 2rpx 2rpx 0 rgba(0, 0, 0, 0.84);
}
.custom_header .bg_img {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.custom_header .bg_img > image {
  width: 100%;
}
.custom_header .nav {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  height: 109rpx;
}
.custom_header .nav .scroll_view {
  width: 296rpx;
  height: 109rpx;
  white-space: nowrap;
  display: block;
}
.custom_header .nav .scroll_view .scroll_item {
  width: 90rpx;
  height: 109rpx;
  overflow: hidden;
  margin-right: 13rpx;
  display: inline-block;
  border: 4rpx solid #fff;
  border-radius: 14px;
  box-sizing: border-box;
}
.custom_header .nav .scroll_view .scroll_item:last-child {
  margin-right: 0;
}
.custom_header .nav .scroll_view .scroll_item > image {
  height: 100%;
}
.custom_header .nav .scroll_view .scroll_item.active {
  border-color: #00c584;
}
.custom_header .btns {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  height: 109rpx;
  width: 292rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.custom_header .btns .sofa {
  width: 120rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
