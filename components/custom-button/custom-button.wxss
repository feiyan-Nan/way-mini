.btn{
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.btn button{
  padding: 0;
  font-size: inherit;
  line-height: inherit;
  border-radius: 0;
  color: inherit;
  background: none;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn button::after{
  display: none;
  border: none;
  transform: none;
}