.mask {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.5);
  overflow: hidden;
}
.bottom-button-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #FFFFFF;
  box-sizing: border-box;
  border-top: 1px solid #E6E6E6;
  z-index: 11;
}

.bottom-button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #031C24;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  border-radius: 0;
  margin-top: 24rpx;
  padding: 0 20rpx 24rpx;
}
.bottom-button.no-border::after {
  border: 0;
}

.button-wrap {
  display: flex;
  padding: 0 20rpx 24rpx;
}

.first-bottom-button {
  width: 100%;
  line-height: 77rpx;
  border-radius: 0;
  border: 1rpx solid #031C24;
  background: #fff;
  text-align: center;
  font-size: 28rpx;
  margin-right: 10rpx;
  margin-top: 24rpx;
}

.first-bottom-button::after {
  border-radius: 0;
  border: none;
}

.contact {
  margin-right: 32rpx;
  display: flex;
  align-items: center;
  padding: 0;
  flex-basis: 48rpx;
  flex-shrink: 0;
  margin-top: 24rpx;
  background: #fff;
}
.contact::after {
  border: none;
}
.contact image,
image.contact {
  width: 48rpx;
  height: 48rpx;
}
image.contact {
  margin-top: 40rpx;
}
