/**app.wxss**/
@import '/miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';
page {
  font-size: 28rpx;
  color: #031c24;
  font-weight: 300;
}

.weui-slideview__btn__wrp{
  width: 120rpx !important;
}

.line {
  border-top: 1px dashed #E6E6E6;
  margin: 60rpx 0;
}

.line-margin-top {
  border-top: 1px dashed #E6E6E6;
  margin-top: 60rpx;
}

/* button去除样式 */
.none-style-btn {
  margin: 0;
  padding: 0;
  line-height: 1;
  border: 0;
  border-radius: 0;
  cursor: auto;
  color: rgba(0,0,0,0);
  background-color: rgba(0,0,0,0);
}
.none-style-btn::after {
  border: 0;
}
/* 滚动底部 通用提示样式 */
.bottm-tip {
  width: 100%;
  height: 130rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: Montserrat-Light, Montserrat;
  font-weight: 300;
  color: #031c24;
  line-height: 130rpx;
}
/* 购物袋badge样式*/
.shop-badge {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  padding: 8rpx;
  background: #e88c73;
  z-index: 9;
  font-size: 20rpx;
  line-height: 20rpx;
}