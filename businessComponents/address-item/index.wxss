.shipping-address-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #031c24;
  font-size: 28rpx;
}

.item-name {
  width: 600rpx;
  display: flex;
  flex-direction: column;
}

.edit-icon {
  width: 48rpx;
  height: 48rpx;
  position: relative;
}

.edit-icon::after {
  content: '';
  position: absolute;
  top: -10px;
  left: -10px;
  right: -10px;
  bottom: -10px;
}

.name-phone {
  display: flex;
  margin-bottom: 11rpx;
}

.name {
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.address {
  line-height: 46rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
