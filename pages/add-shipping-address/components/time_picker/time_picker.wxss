.container{
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background: rgba(0,0,0,.6);
}


.picker_box{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 45vh;
  background: #FFF;
  transform: translateY(100%);
}

.picker_box .picker_header{
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  padding: 0 22px;
  border-bottom: 1rpx solid rgba(127,127,127, .2);
}

.cancel{
  color: #7f7f7f;
}
.ok{
  color: #07c160;
  font-weight: 400;
}

.picker_box .picker_row{
  height: calc( 100% - 50px );
}

.picker_box .picker_row .picker_column{
  width: 33.33%;
  text-align: center;
  font-size: 24rpx;
}

.picker_box .picker_row .picker_column view{
  line-height: 50px;
  color: #191919;
}