            <view class="left">
                <VanIcon name="http://10.5.4.75:9999/subway.png" size="32rpx" />
                <view>地铁 <text>10</text> 号线</view>
            </view>

            <view class="right">
              <!-- 20人顺路<text>></text> -->
              20人顺路 <VanIcon name="arrow" color="#9CA6AF" size="26rpx" />
            </view>
        </view>
        <view class="box">
