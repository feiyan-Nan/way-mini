.homepage .tab-content {
  height: 100%;
  background-color: #00C685;
}
.homepage .tab-content .sameway {
  margin: 35rpx 25rpx 0;
  padding: 38rpx 30rpx;
  background: #ffffff;
  border-radius: 40rpx;
  box-shadow: 0px 0px 50rpx 0px rgba(0, 161, 91, 0.2);
}
.homepage .tab-content .sameway:last-of-type {
  margin-bottom: 50rpx;
}
.homepage .tab-content .sameway .header {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.homepage .tab-content .sameway .header .left {
  display: flex;
  font-size: 30rpx;
  font-weight: 700;
  color: #241f26;
  align-items: center;
}
.homepage .tab-content .sameway .header .left > view {
  margin-left: 15rpx;
}
.homepage .tab-content .sameway .header .left > view text {
  color: #00C584;
}
.homepage .tab-content .sameway .header .right {
  font-size: 26rpx;
  font-weight: 700;
  color: #9ca6af;
}
.homepage .tab-content .sameway .header .right > text {
  font-size: 26rpx;
  margin-left: 13rpx;
}
.homepage .tab-content .sameway .box .scrollbox {
  margin-top: 56rpx;
  box-sizing: border-box;
  width: 100%;
  white-space: nowrap;
}
.homepage .tab-content .sameway .box .scrollbox .avatar {
  width: 139rpx;
  display: inline-flex;
  display: inline-block;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}
.homepage .tab-content .sameway .box .scrollbox .avatar:last-child {
  margin-right: 0;
}
.homepage .tab-content .sameway .box .scrollbox .avatar .name {
  color: #666B71;
  font-size: 22rpx;
  margin-top: 27rpx;
}
.homepage .tab-content .sameway .box .scrollbox .avatar .gender {
  margin-top: 11rpx;
}
.loveme {
  height: 100vh;
}
.loveme .baby_box {
  padding-top: 60rpx;
  padding-bottom: 120rpx;
}
.loveme .baby_box .baby {
  width: 700rpx;
  margin: 0 auto;
  margin-bottom: 36rpx;
  border-radius: 40px;
  box-shadow: 0px 0px 30px 0px rgba(0, 118, 67, 0.2);
  overflow: hidden;
  padding-bottom: 48rpx;
}
.loveme .baby_box .baby .header {
  width: 700rpx;
  height: 690rpx;
  overflow: hidden;
}
.loveme .baby_box .baby .footer {
  padding-left: 25rpx;
  padding-top: 27rpx;
  color: #00C584;
  font-size: 28rpx;
}
.loveme .baby_box .baby .footer .tip {
  display: flex;
  align-items: center;
}
.loveme .baby_box .baby .footer .tip > text {
  margin-left: 14rpx;
}
.loveme .baby_box .baby .footer .info {
  display: flex;
  font-size: 28rpx;
  font-weight: 700;
  color: #666b71;
  margin-top: 43rpx;
}
.loveme .baby_box .baby .footer .info > text {
  padding: 0 30rpx;
  position: relative;
}
.loveme .baby_box .baby .footer .info > text::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: #a7a7a7;
}
.loveme .baby_box .baby .footer .info > text:first-child {
  padding-left: 0;
}
.loveme .baby_box .baby .footer .info > text:last-child {
  padding-right: 0;
}
.loveme .baby_box .baby .footer .info > text:last-child::after {
  display: none;
}
.loveme .baby_box .baby .footer .lines {
  margin: 40rpx 60rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.loveme .baby_box .baby .footer .lines .egg {
  height: 40rpx;
  padding: 0 23rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #eee;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #9ca6af;
  margin-right: 18rpx;
  margin-top: 25rpx;
}
.loveme .baby_box .baby .footer .lines .egg:last-child {
  margin-right: 0;
}
.fadeIn {
  transition: all 0.3s linear;
}
