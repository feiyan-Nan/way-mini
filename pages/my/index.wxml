<view>
  <view class="avator-username" wx:if="{{userInfo}}"  bind:tap="handleEdit">
    <view class="avator">
      <image src="{{ userInfo.userInfoDTO.avatar }}" mode="widthFix" class="touxiang" />
    </view>
    <view class="username-edit">
      <view class="nickname">{{ userInfo.userInfoDTO.name }}</view>
      <view class="edit">查看/编辑资料</view>
    </view>
  </view>

  <view class="avator-username" wx:else bind:tap="handleEdit">
    <view class="avator">
      <image src="../../assets/images/my/profile.png" class="icon" />
    </view>
    <view class="username-edit">
      <view class="nickname">昵称</view>
      <view class="edit">查看/编辑资料</view>
    </view>
  </view>


  <view class="digital">
    <view class="item">
      <view class="number">{{ userInfo.userInfoDTO.friendNum }}</view>
      <view class="item-name">路友</view>
    </view>
    <view class="item">
      <view class="number">{{ userInfo.userInfoDTO.callNum }}</view>
      <view class="item-name">我想顺路</view>
    </view>
    <view class="item">
      <view class="number">{{ userInfo.userInfoDTO.calledNum }}</view>
      <view class="item-name">想和我顺路</view>
    </view>
  </view>
  <view class="cellbox">
    <view class="cell">
      <button open-type="share"/>
      <view class="cell-left"><image src="/assets/images/my/zhuan-fa.png" class="demonstrate" mode="widthFix"/>推荐给好友
      </view>
      <view class="cell-right">
        <image src="/assets/images/shipping-address/right-arrow.png" mode="widthFix"/>
      </view>
    </view>

    <view class="cell">
      <button
        wx:if="{{ true }}"
        session-from="{{sessionFrom}}"
        open-type="contact"
        bind:contact="handleContact"
      />
      <!--      <button wx:else bind:tap="goToChart" />-->
      <view class="cell-left"><image src="/assets/images/my/ju-bao.png" class="ju-bao" mode="widthFix"/>举报或反馈
      </view>
      <view class="cell-right">
        <image src="/assets/images/shipping-address/right-arrow.png" mode="widthFix"/>
      </view>
    </view>
  </view>

</view>