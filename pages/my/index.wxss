.cellbox {

}

.cellbox .cell{
  height: 136rpx;
  box-sizing: border-box;
  margin: 0 40rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.cellbox .cell::after{
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  background: url("http://oss.cogo.club/3e05e393-2c58-4e83-a225-beed24e03a7b.png") repeat-x center;
  background-size: auto 2rpx;
}

.cellbox .cell button {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  opacity: 0;
}
.cellbox .cell .cell-right {
  display: flex;
  align-items: center;
  justify-content: center;
}

.cellbox .cell .cell-right .section {
  width: 24rpx;
  height: 24rpx;
  /*background-color: red;*/
}

.cellbox .cell .cell-right .section image {
  width: 100%;
}

.cellbox .cell .cell-right image {
  display: block;
  width: 48rpx;
}

.cellbox .cell .cell-right text {
  color: #E88C73;
  font-size: 24rpx;
  line-height: 1;
}