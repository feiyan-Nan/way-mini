.header {
  width: 100vw;
  height: 100vw;
  overflow: hidden;
  background-repeat: no-repeat;
  background-position:center;
  background-size: cover;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.header .userInfo {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
  color: #FFFFFF;
}

.header .userInfo .userId{
  position: absolute;
  bottom: -54rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
}

.header .userInfo .avator{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  /*overflow: hidden;*/
}

.hat{
  position: relative;
}

.hat:after{
  content: '';
  position: absolute;
  right: -68rpx;
  top: -45rpx;
  width: 149rpx;
  height: 117rpx;
  background: url("https://oss.fabrique.cn/7760ace2-5a6a-47b8-b051-f565073cb5d7.png") no-repeat center;
  background-size: 100%;
}

.header .userInfo text{
  font-size: 36rpx;
  margin-top: 60rpx;
  font-weight: 500;
  white-space: nowrap;
  max-width: 80vw;
  overflow: hidden;
  text-overflow: ellipsis;
}

.header .login{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #FFFFFF;
  font-size: 28rpx;
}
.login .btn {
  width: 240rpx;
  height: 72rpx;
  background-color: #FFF;
  color: #031C24;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  font-size: 28rpx;
}

