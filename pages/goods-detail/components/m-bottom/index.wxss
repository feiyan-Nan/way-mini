.mask {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}
.piker-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  /*height: 90vh;*/
   /* height: 860rpx; */
  background-color: #FFFFFF;
  z-index: 1001;
  transition: all 0.5s ease;
}
.piker-wrap.show {
  bottom: 0;
  transition: all 0.5s ease;
}
.piker-wrap.hide {
  /*bottom: -480rpx;*/
  bottom: -50%;
  transition: all 0.5s ease;
}
