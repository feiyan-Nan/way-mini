.custom_mask .main .size_test {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 40rpx;
  padding-top: 30rpx;
}
.custom_mask .main .size_test .measure {
  display: flex;
  align-items: center;
  justify-content: center;
}
.custom_mask .main .size_test .measure image {
  width: 48rpx;
  height: 48rpx;
}
.custom_mask .main .tile_size {
  font-size: 28rpx;
  font-weight: 300;
  color: #031C24;
  padding: 10rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 50%;
}
.custom_mask .main .tile_size > view {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.custom_mask .main .tile_size > view image {
  width: 48rpx;
  height: 48rpx;
}
.custom_mask .main .tip {
  padding: 0 40rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #031C24;
  margin-top: 20rpx;
}
.custom_mask .main .picker_box {
  position: relative;
  height: 460rpx;
  padding: 0 40rpx;
  margin-top: 38rpx;
}
.custom_mask .main .picker_box .picker {
  height: 400rpx;
}
.custom_mask .main .picker_box .row {
  font-size: 24rpx;
  font-weight: 300;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
}
.custom_mask .main .picker_box .selected {
  height: 80rpx;
  background: #EDF0F0;
  z-index: -1;
}
.custom_mask .main .picker_box .picker_tip {
  font-size: 24rpx;
  font-weight: 300;
  color: #E88C73;
}
.custom_mask .main .picker_box_line {
  position: relative;
}
.custom_mask .main .picker_box_line::before {
  content: '';
  position: absolute;
  left: 40rpx;
  top: 0;
  right: 40rpx;
  width: calc(100% - 80rpx);
  height: 1rpx;
  background: url("https://oss.fabrique.cn/b38751d2-f9af-4101-8166-471a990a71ba.png") repeat-x center;
  background-size: 100% auto;
  z-index: 8;
}
.custom_mask .main .picker_box_shopbag {
  box-sizing: border-box;
  padding-top: 30rpx;
}
.custom_mask .main .line {
  height: 1rpx;
  border-top: 1rpx solid #E6E6E6;
  margin: 0;
}
.custom_mask .main .btn {
  margin: 24rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 300;
  color: #FFF;
  background: #031C24;
  height: 80rpx;
}
.custom_mask .main .soldOut {
  background: #EDF0F0;
  font-size: 28rpx;
  font-weight: 300;
  color: #999;
}
