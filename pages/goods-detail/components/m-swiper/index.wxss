.swiper {
  width: 750rpx;
  height: 800rpx;
  background-color: #ECEFEF;
}

.swiper.full-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
  background-color: #000000;
  z-index: 999;
}

.swiper .swiper-item {
  position: relative;
}

.swiper-image-wrap {
  position: absulute;
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 800rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.swiper-image.cover {
  position: absolute;
  top: 0;
  left: 0;
}

.swiper-video {
  width: 100%;
  height: 800rpx;
  position: relative;
  /* position: absolute;
  top: 50%;
  transform: translateY(-50%); */
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/*用来包裹所有的小圆点 */
.dots {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
}

/*未选中时的小圆点样式 */
.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #031C24;
}

/*选中以后的小圆点样式 */
.active {
  width: 16rpx;
  height: 16rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0);
  border: 2rpx solid #031C24;
}