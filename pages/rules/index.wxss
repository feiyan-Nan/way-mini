.rules .sticky {
  width: calc(100vw - 80rpx);
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 40rpx;
  background: #FFFFFF;
}
.rules .sticky .sticky-item {
  height: 88rpx;
  width: 33.33333333%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 28rpx;
  font-weight: 300;
  color: #031C24;
  position: relative;
}
.rules .sticky .sticky-item text {
  line-height: 1;
}
.rules .sticky .sticky-item image {
  width: 58rpx;
  height: 4rpx;
  position: absolute;
  bottom: 10rpx;
  display: none;
}
.rules .sticky .active {
  font-size: 28rpx;
  font-weight: 500;
  color: #031C24;
}
.rules .sticky .active image {
  display: block;
}
.rules .content {
  margin-top: 60rpx;
  padding: 0 40rpx;
}
.rules .content .section {
  margin-bottom: 60rpx;
}
.rules .content .section .title {
  font-size: 28rpx;
  font-weight: 500;
  color: #031C24;
}
.rules .content .section .detail {
  font-size: 28rpx;
  font-weight: 300;
  color: #031C24;
  line-height: 42rpx;
}
.rules .content .section .detail_first_of_type {
  margin-top: 20rpx;
}
.rules .content .section .accentColor {
  color: #E88C73;
}
