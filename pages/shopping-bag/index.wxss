.shopping-bag {
  padding-bottom: 300rpx;
}

.shopping-bag .header {
  margin: 0 40rpx;
  margin-top: 20rpx;
  color: #031c24;
}

.line-bottom {
  /*border-bottom: 2rpx dashed #031c24;*/
  /*padding-bottom: 60rpx;*/
  padding-bottom: 60rpx;
  position: relative;
}
.line-bottom::after{
  content: '';
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 2rpx;
  background: url("http://oss.cogo.club/3a25d58e-a362-40e6-92b6-52712330fd21.png") repeat-x center;
  background-size: auto 2rpx;
}

.shopping-bag .header .title {
  font-size: 36rpx;
  font-weight: 500;
  line-height: 1;
}
.shopping-bag .header .sub {
  font-size: 28rpx;
  font-weight: 300;
  margin-top: 20rpx;
  line-height: 1;
}

.shopping-bag .header .sub text {
  color: #e88c73;
}
.shopping-bag .serviceDesc{
  text-align: center;
  color: #031c24;
  margin-top: 20rpx;
  font-size: 24rpx;
  line-height: 1;
}

.dead {
  margin-top: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 0 40rpx;
  color: #031c24;
  margin-bottom: 40rpx;
}

.dead .dead_title {
  font-size: 32rpx;
  font-weight: 500;
}

.dead_remove {
  font-size: 24rpx;
  font-weight: 300;
}

.limit{
  font-size: 24rpx;
  color: #031C24;
  text-align: center;
  margin-top: 120rpx;
  font-weight: 300;
}

.empty {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
  text-align: center;
  min-width: 420rpx;
  color: #031c24;
}

.empty .empty_title {
  font-size: 32rpx;
  font-weight: 600;
}

.empty .empty_desc {
  font-size: 28rpx;
  margin-top: 60rpx;
  line-height: 42rpx;
}

.empty .empty_btn {
  width: 240rpx;
  height: 72rpx;
  border: 1px solid #031c24;
  font-size: 28rpx;
  line-height: 72rpx;
  display: inline-block;
  margin-top: 60rpx;
}

.summary {
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 2;
}
.amount_of_goods {
  margin-left: 20rpx;
  display: flex;
}
.amount_of_goods text {
  margin-left: 20rpx;
}
.radio_box_bottom {
  /*width: 100rpx;*/
  padding-left: 10rpx;
}
.total {
  display: flex;
  margin-right: 28rpx;
  align-items: flex-end;
  padding-right: 10rpx;
}
.text{
  line-height: 1;
  font-size: 28rpx;
}
.price {
  line-height: 1;
  font-size: 36rpx !important;
  color: #081b23;
  font-weight: 500;
}

.line {
  border-top: 1px dashed #e6e6e6;
  margin: 60rpx 0;
}

.no-address {
  text-align: center;
}

.remove .weui-slideview__btn {
  background-color: #031c24;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 300;
  box-sizing: border-box;
  min-width: 120rpx !important;
}

.mask {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  /*z-index: 19;*/
}